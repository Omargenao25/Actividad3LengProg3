@model IEnumerable<Actividad3LengProg3.Models.EstudianteViewModel>

@{
    ViewBag.Title = "Lista de Estudiantes";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="fa fa-users"></i> Lista de Estudiantes Registrados
                    </h3>
                </div>
                <div class="panel-body">
                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            @TempData["Mensaje"]
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            @TempData["Error"]
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-12">
                            @Html.ActionLink("Registrar Nuevo Estudiante", "Index", null, new { @class = "btn btn-primary btn-sm pull-right", style = "margin-bottom: 15px;" })
                        </div>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Matrícula</th>
                                        <th>Nombre Completo</th>
                                        <th>Carrera</th>
                                        <th>Correo</th>
                                        <th>Teléfono</th>
                                        <th>Género</th>
                                        <th>Turno</th>
                                        <th>Tipo Ingreso</th>
                                        <th>Becado</th>
                                        <th>% Beca</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var estudiante in Model)
                                    {
                                        <tr>
                                            <td><strong>@estudiante.Matricula</strong></td>
                                            <td>@estudiante.NombreCompleto</td>
                                            <td>@estudiante.Carrera</td>
                                            <td>
                                                <a href="mailto:@estudiante.CorreoInstitucional">
                                                    @estudiante.CorreoInstitucional
                                                </a>
                                            </td>
                                            <td>@estudiante.Telefono</td>
                                            <td>@estudiante.Genero</td>
                                            <td>
                                                <span class="label @(estudiante.Turno == "Mañana" ? "label-success" : estudiante.Turno == "Tarde" ? "label-warning" : "label-info")">
                                                    @estudiante.Turno
                                                </span>
                                            </td>
                                            <td>@estudiante.TipoIngreso</td>
                                            <td>
                                                @if (estudiante.EstaBecado)
                                                {
                                                    <span class="label label-success">Sí</span>
                                                }
                                                else
                                                {
                                                    <span class="label label-default">No</span>
                                                }
                                            </td>
                                            <td>
                                                @if (estudiante.EstaBecado && estudiante.PorcentajeBeca.HasValue)
                                                {
                                                    <strong>@estudiante.PorcentajeBeca%</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-xs" role="group">
                                                    @Html.ActionLink("Editar", "Editar", new { matricula = estudiante.Matricula }, new { @class = "btn btn-warning btn-xs", title = "Editar estudiante" })
                                                    @Html.ActionLink("Eliminar", "Eliminar", new { matricula = estudiante.Matricula }, new { @class = "btn btn-danger btn-xs", title = "Eliminar estudiante", onclick = "return confirm('¿Está seguro de eliminar este estudiante?');" })
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-info">
                                    <strong>Total de estudiantes registrados:</strong> @Model.Count()
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <h4><i class="fa fa-exclamation-triangle"></i> No hay estudiantes registrados</h4>
                            <p>Comience registrando el primer estudiante.</p>
                            @Html.ActionLink("Registrar Primer Estudiante", "Index", null, new { @class = "btn btn-primary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
