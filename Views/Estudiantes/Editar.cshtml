@model Actividad3LengProg3.Models.EstudianteViewModel

@{
    ViewBag.Title = "Editar Estudiante";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="fa fa-edit"></i> Editar Estudiante - @Model.Matricula
                    </h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("Editar", "Estudiantes", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Matricula)

                        <div class="form-group">
                            @Html.LabelFor(m => m.NombreCompleto, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.NombreCompleto, new { @class = "form-control", placeholder = "Ingrese el nombre completo" })
                                @Html.ValidationMessageFor(m => m.NombreCompleto, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Matricula, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Matricula, new { @class = "form-control", @readonly = "readonly", title = "La matrícula no se puede modificar" })
                                <small class="text-muted">La matrícula no se puede modificar</small>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Carrera, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.DropDownListFor(m => m.Carrera, ViewBag.Carreras as SelectList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Carrera, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.CorreoInstitucional, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.CorreoInstitucional, new { @class = "form-control", placeholder = "estudiante@universidad.edu.do", type = "email" })
                                @Html.ValidationMessageFor(m => m.CorreoInstitucional, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Telefono, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", placeholder = "8091234567" })
                                @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.FechaNacimiento, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.FechaNacimiento, new { @class = "form-control", type = "date" })
                                @Html.ValidationMessageFor(m => m.FechaNacimiento, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Genero, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                <div class="radio-inline">
                                    @Html.RadioButtonFor(m => m.Genero, "Masculino", new { id = "genero_m_edit" })
                                    <label for="genero_m_edit">Masculino</label>
                                </div>
                                <div class="radio-inline">
                                    @Html.RadioButtonFor(m => m.Genero, "Femenino", new { id = "genero_f_edit" })
                                    <label for="genero_f_edit">Femenino</label>
                                </div>
                                <div class="radio-inline">
                                    @Html.RadioButtonFor(m => m.Genero, "Otro", new { id = "genero_o_edit" })
                                    <label for="genero_o_edit">Otro</label>
                                </div>
                                @Html.ValidationMessageFor(m => m.Genero, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Turno, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.DropDownListFor(m => m.Turno, ViewBag.Turnos as SelectList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Turno, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.TipoIngreso, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.DropDownListFor(m => m.TipoIngreso, ViewBag.TiposIngreso as SelectList, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.TipoIngreso, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.EstaBecado, new { id = "chk_becado_edit" })
                                    @Html.LabelFor(m => m.EstaBecado, new { @for = "chk_becado_edit" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group" id="grupo_beca_edit">
                            @Html.LabelFor(m => m.PorcentajeBeca, new { @class = "col-sm-3 control-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(m => m.PorcentajeBeca, new { @class = "form-control", type = "number", min = "0", max = "100", placeholder = "0-100" })
                                @Html.ValidationMessageFor(m => m.PorcentajeBeca, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.AceptaTerminos)
                                    @Html.LabelFor(m => m.AceptaTerminos)
                                </div>
                                @Html.ValidationMessageFor(m => m.AceptaTerminos, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fa fa-save"></i> Actualizar Estudiante
                                </button>
                                @Html.ActionLink("Cancelar", "Lista", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
